<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    tools:context="id.ngavinsir.splashscreen.MainAct">

    <LinearLayout
        android:id="@+id/lay_screen"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/cardview_dark_background"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="1.0">

        <FrameLayout
            android:id="@+id/introbg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".67"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/mainmenu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".67"
                android:orientation="vertical"
                android:visibility="visible">

                <FrameLayout
                    android:id="@+id/lay_upper"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".67">

                    <RelativeLayout
                        android:id="@+id/lay_about"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/a1">

                        <Button
                            android:id="@+id/bt_about"
                            style="@style/Widget.AppCompat.Button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/elementer"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="20dp"
                            android:layout_marginTop="5dp"
                            android:background="@color/colorPrimary"
                            android:fontFamily="sans-serif-smallcaps"
                            android:text="ABOUT"
                            android:textColor="@color/colorWhite" />

                        <TextView
                            android:id="@+id/elementer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="false"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:gravity="center_vertical|center"
                            android:text="Elementeer"
                            android:textColor="@color/colorAccent"
                            android:textSize="56sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/lay_credits"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/about"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/close_about"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginRight="6dp"
                            android:layout_marginTop="6dp"
                            android:scaleX=".5"
                            android:scaleY=".5"
                            app:srcCompat="@drawable/close_about" />

                        <TextView
                            android:id="@+id/abtxt2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/abtxt1"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="14dp"
                            android:background="@color/colorWhite"
                            android:paddingBottom="4dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="4dp"
                            android:text="17."
                            android:textColor="@color/colorBlack"
                            android:textSize="21sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/abtxt1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="74dp"
                            android:background="@color/colorWhite"
                            android:paddingBottom="4dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="4dp"
                            android:text="Nathanael Gavin"
                            android:textColor="@color/colorBlack"
                            android:textSize="21sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                </FrameLayout>

                <RelativeLayout
                    android:id="@+id/lay_lower"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".4">

                    <TextView
                        android:id="@+id/strip1"
                        android:layout_width="match_parent"
                        android:layout_height="57dp"
                        android:layout_marginTop="110dp"
                        android:background="#546E7A"
                        android:elevation="20dp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/strip11"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_marginTop="102dp"
                        android:background="#78909C"
                        android:elevation="0dp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/strip21"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_marginTop="225dp"
                        android:background="#78909C"
                        android:elevation="10dp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/cat"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="14dp"
                        android:elevation="100dp"
                        android:fontFamily="casual"
                        android:gravity="center"
                        android:text="Category"
                        android:textColor="#FFFFFF"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/strip2"
                        android:layout_width="match_parent"
                        android:layout_height="57dp"
                        android:layout_marginTop="235dp"
                        android:background="#546E7A"
                        android:elevation="20dp"
                        android:visibility="visible" />

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="-25dp"
                        android:layout_marginTop="0dp"
                        android:layout_weight=".33"
                        app:cardBackgroundColor="#455A64"
                        app:cardCornerRadius="40dp"
                        app:cardElevation="20dp"
                        app:cardUseCompatPadding="true">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:id="@+id/buttons"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight=".45"
                                android:orientation="horizontal"
                                android:visibility="visible">

                                <LinearLayout
                                    android:id="@+id/row1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="-10dp"
                                    android:layout_weight=".5"
                                    android:orientation="vertical">

                                    <RelativeLayout
                                        android:id="@+id/r1"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight=".5">

                                        <ImageButton
                                            android:id="@+id/bt5"
                                            android:layout_width="84dp"
                                            android:layout_height="84dp"
                                            android:layout_alignParentLeft="true"
                                            android:layout_alignParentStart="true"
                                            android:layout_alignParentTop="true"
                                            android:layout_marginLeft="40dp"
                                            android:layout_marginTop="20dp"
                                            android:layout_weight=".5"
                                            android:background="@drawable/rounded_button"
                                            android:elevation="8dp"
                                            android:onClick="openConvert"
                                            android:paddingLeft="5dp"
                                            app:srcCompat="@drawable/i_money" />

                                        <ImageButton
                                            android:id="@+id/bt1"
                                            android:layout_width="84dp"
                                            android:layout_height="84dp"
                                            android:layout_alignLeft="@+id/bt5"
                                            android:layout_alignParentBottom="false"
                                            android:layout_alignParentEnd="false"
                                            android:layout_alignParentLeft="false"
                                            android:layout_alignParentRight="false"
                                            android:layout_alignParentStart="false"
                                            android:layout_alignParentTop="false"
                                            android:layout_alignRight="@+id/bt5"
                                            android:layout_centerVertical="true"
                                            android:layout_weight=".5"
                                            android:background="@drawable/rounded_button"
                                            android:elevation="8dp"
                                            android:onClick="openConvert"
                                            android:paddingBottom="8dp"
                                            android:paddingLeft="8dp"
                                            android:paddingRight="8dp"
                                            android:paddingTop="8dp"
                                            android:visibility="visible"
                                            app:srcCompat="@drawable/i_weight" />

                                        <ImageButton
                                            android:id="@+id/bt3"
                                            android:layout_width="84dp"
                                            android:layout_height="84dp"
                                            android:layout_alignLeft="@+id/bt1"
                                            android:layout_alignParentBottom="true"
                                            android:layout_alignStart="@+id/bt1"
                                            android:layout_marginBottom="20dp"
                                            android:layout_weight=".5"
                                            android:background="@drawable/rounded_button"
                                            android:elevation="8dp"
                                            android:onClick="openConvert"
                                            android:paddingBottom="10dp"
                                            app:srcCompat="@drawable/i_speed" />
                                    </RelativeLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/row2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="-10dp"
                                    android:layout_weight=".5"
                                    android:orientation="vertical">

                                    <RelativeLayout
                                        android:id="@+id/r2"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight=".5">

                                        <ImageButton
                                            android:id="@+id/bt6"
                                            android:layout_width="84dp"
                                            android:layout_height="84dp"
                                            android:layout_alignParentEnd="true"
                                            android:layout_alignParentRight="true"
                                            android:layout_alignParentTop="true"
                                            android:layout_marginRight="40dp"
                                            android:layout_marginTop="20dp"
                                            android:layout_weight=".5"
                                            android:background="@drawable/rounded_button"
                                            android:elevation="8dp"
                                            android:onClick="openConvert"
                                            android:paddingLeft="5dp"
                                            android:paddingTop="3dp"
                                            app:srcCompat="@drawable/i_volume" />

                                        <ImageButton
                                            android:id="@+id/bt4"
                                            android:layout_width="84dp"
                                            android:layout_height="84dp"
                                            android:layout_alignLeft="@+id/bt6"
                                            android:layout_alignRight="@+id/bt6"
                                            android:layout_centerVertical="true"
                                            android:layout_weight=".5"
                                            android:background="@drawable/rounded_button"
                                            android:elevation="8dp"
                                            android:onClick="openConvert"
                                            android:paddingLeft="2dp"
                                            app:srcCompat="@drawable/i_temp" />

                                        <ImageButton
                                            android:id="@+id/bt2"
                                            android:layout_width="84dp"
                                            android:layout_height="84dp"
                                            android:layout_alignLeft="@+id/bt4"
                                            android:layout_alignParentBottom="true"
                                            android:layout_alignStart="@+id/bt4"
                                            android:layout_marginBottom="20dp"
                                            android:layout_weight=".5"
                                            android:background="@drawable/rounded_button"
                                            android:elevation="8dp"
                                            android:onClick="openConvert"
                                            android:paddingLeft="2dp"
                                            app:srcCompat="@drawable/i_dist" />
                                    </RelativeLayout>

                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/reveal"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="@color/colorPrimary"
                                android:focusableInTouchMode="true"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <RelativeLayout
                                    android:id="@+id/reveal2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:focusableInTouchMode="true">

                                    <RelativeLayout
                                        android:id="@+id/hiks"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentLeft="true"
                                        android:layout_alignParentStart="true"
                                        android:layout_marginTop="12dp">

                                        <TextView
                                            android:id="@+id/c_title"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerHorizontal="true"
                                            android:fontFamily="casual"
                                            android:text="Weight"
                                            android:textColor="#B71C1C"
                                            android:textSize="30sp"
                                            android:textStyle="bold" />

                                        <LinearLayout
                                            android:id="@+id/temp2_holder"
                                            android:layout_width="match_parent"
                                            android:layout_height="45dp"
                                            android:layout_below="@+id/separator"
                                            android:layout_centerHorizontal="true"
                                            android:layout_marginTop="10dp"
                                            android:gravity="center"
                                            android:orientation="vertical">

                                            <android.support.v4.view.ViewPager
                                                android:id="@+id/temp2"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_gravity="center"
                                                android:overScrollMode="never" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:id="@+id/speed1_holder"
                                            android:layout_width="match_parent"
                                            android:layout_height="45dp"
                                            android:layout_below="@+id/c_title"
                                            android:layout_centerHorizontal="true"
                                            android:gravity="center"
                                            android:orientation="vertical">

                                            <android.support.v4.view.ViewPager
                                                android:id="@+id/speed1"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_gravity="center"
                                                android:overScrollMode="never" />
                                        </LinearLayout>

                                        <EditText
                                            android:id="@+id/val1"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@+id/type1"
                                            android:layout_centerHorizontal="true"
                                            android:background="@android:color/transparent"
                                            android:ems="10"
                                            android:fontFamily="casual"
                                            android:gravity="center"
                                            android:inputType="number|numberDecimal"
                                            android:singleLine="true"
                                            android:text="1"
                                            android:textColor="@color/yellow"
                                            android:textSize="23sp"
                                            android:textStyle="bold" />

                                        <LinearLayout
                                            android:id="@+id/vol1_holder"
                                            android:layout_width="match_parent"
                                            android:layout_height="45dp"
                                            android:layout_below="@+id/c_title"
                                            android:layout_centerHorizontal="true"
                                            android:gravity="center"
                                            android:orientation="vertical">

                                            <android.support.v4.view.ViewPager
                                                android:id="@+id/vol1"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_gravity="center"
                                                android:overScrollMode="never" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:id="@+id/weight1_holder"
                                            android:layout_width="match_parent"
                                            android:layout_height="45dp"
                                            android:layout_below="@+id/c_title"
                                            android:layout_centerHorizontal="true"
                                            android:gravity="center"
                                            android:orientation="vertical">

                                            <android.support.v4.view.ViewPager
                                                android:id="@+id/weight1"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_gravity="center"
                                                android:overScrollMode="never" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:id="@+id/money1_holder"
                                            android:layout_width="match_parent"
                                            android:layout_height="45dp"
                                            android:layout_below="@+id/c_title"
                                            android:layout_centerHorizontal="true"
                                            android:gravity="center"
                                            android:orientation="vertical">

                                            <android.support.v4.view.ViewPager
                                                android:id="@+id/money1"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_gravity="center"
                                                android:overScrollMode="never" />
                                        </LinearLayout>

                                        <TextView
                                            android:id="@+id/type2"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@+id/separator"
                                            android:layout_centerHorizontal="true"
                                            android:layout_marginTop="20dp"
                                            android:fontFamily="casual"
                                            android:textColor="@color/cardview_dark_background"
                                            android:textSize="24sp"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:id="@+id/type1"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@+id/c_title"
                                            android:layout_centerHorizontal="true"
                                            android:layout_marginTop="0dp"
                                            android:fontFamily="casual"
                                            android:textColor="@color/cardview_dark_background"
                                            android:textSize="24sp"
                                            android:textStyle="bold"
                                            android:visibility="visible" />

                                        <LinearLayout
                                            android:id="@+id/speed2_holder"
                                            android:layout_width="match_parent"
                                            android:layout_height="45dp"
                                            android:layout_below="@+id/separator"
                                            android:layout_centerHorizontal="true"
                                            android:layout_marginTop="10dp"
                                            android:gravity="center"
                                            android:orientation="vertical">

                                            <android.support.v4.view.ViewPager
                                                android:id="@+id/speed2"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_gravity="center"
                                                android:overScrollMode="never" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:id="@+id/dist2_holder"
                                            android:layout_width="match_parent"
                                            android:layout_height="45dp"
                                            android:layout_below="@+id/separator"
                                            android:layout_centerHorizontal="true"
                                            android:layout_marginTop="10dp"
                                            android:gravity="center"
                                            android:orientation="vertical">

                                            <android.support.v4.view.ViewPager
                                                android:id="@+id/dist2"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_gravity="center"
                                                android:overScrollMode="never" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:id="@+id/vol2_holder"
                                            android:layout_width="match_parent"
                                            android:layout_height="45dp"
                                            android:layout_below="@+id/separator"
                                            android:layout_centerHorizontal="true"
                                            android:layout_marginTop="10dp"
                                            android:gravity="center"
                                            android:orientation="vertical">

                                            <android.support.v4.view.ViewPager
                                                android:id="@+id/vol2"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_gravity="center"
                                                android:overScrollMode="never" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:id="@+id/money2_holder"
                                            android:layout_width="match_parent"
                                            android:layout_height="45dp"
                                            android:layout_below="@+id/separator"
                                            android:layout_centerHorizontal="true"
                                            android:layout_marginTop="10dp"
                                            android:gravity="center"
                                            android:orientation="vertical">

                                            <android.support.v4.view.ViewPager
                                                android:id="@+id/money2"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_gravity="center"
                                                android:overScrollMode="never" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:id="@+id/dist1_holder"
                                            android:layout_width="match_parent"
                                            android:layout_height="45dp"
                                            android:layout_below="@+id/c_title"
                                            android:layout_centerHorizontal="true"
                                            android:gravity="center"
                                            android:orientation="vertical">

                                            <android.support.v4.view.ViewPager
                                                android:id="@+id/dist1"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_gravity="center"
                                                android:overScrollMode="never" />
                                        </LinearLayout>

                                        <EditText
                                            android:id="@+id/val2"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@+id/type2"
                                            android:layout_centerHorizontal="true"
                                            android:layout_marginTop="15dp"
                                            android:background="@android:color/transparent"
                                            android:ems="10"
                                            android:focusedByDefault="false"
                                            android:fontFamily="casual"
                                            android:gravity="center"
                                            android:inputType="number|numberDecimal"
                                            android:text="2.205"
                                            android:textColor="@color/yellow"
                                            android:textSize="23sp"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:id="@+id/separator"
                                            android:layout_width="match_parent"
                                            android:layout_height="3dp"
                                            android:layout_below="@+id/val1"
                                            android:layout_centerVertical="true"
                                            android:layout_marginLeft="20dp"
                                            android:layout_marginRight="20dp"
                                            android:layout_marginTop="10dp"
                                            android:background="#B71C1C" />

                                        <LinearLayout
                                            android:id="@+id/temp1_holder"
                                            android:layout_width="match_parent"
                                            android:layout_height="45dp"
                                            android:layout_below="@+id/c_title"
                                            android:layout_centerHorizontal="true"
                                            android:gravity="center"
                                            android:orientation="vertical">

                                            <android.support.v4.view.ViewPager
                                                android:id="@+id/temp1"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_gravity="center"
                                                android:overScrollMode="never" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:id="@+id/weight2_holder"
                                            android:layout_width="match_parent"
                                            android:layout_height="45dp"
                                            android:layout_below="@+id/separator"
                                            android:layout_centerHorizontal="true"
                                            android:layout_marginTop="10dp"
                                            android:gravity="center"
                                            android:orientation="vertical">

                                            <android.support.v4.view.ViewPager
                                                android:id="@+id/weight2"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_gravity="center"
                                                android:overScrollMode="never" />
                                        </LinearLayout>
                                    </RelativeLayout>

                                    <ImageButton
                                        android:id="@+id/closeConvert"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentEnd="true"
                                        android:layout_alignParentRight="true"
                                        android:layout_alignParentTop="true"
                                        android:layout_marginRight="15dp"
                                        android:layout_marginTop="15dp"
                                        android:adjustViewBounds="false"
                                        android:background="@drawable/close_convert"
                                        android:cropToPadding="false"
                                        android:onClick="closeConvert" />

                                </RelativeLayout>
                            </LinearLayout>

                        </FrameLayout>

                    </android.support.v7.widget.CardView>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mainintro"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"
                android:orientation="vertical"
                android:visibility="visible">

                <FrameLayout
                    android:id="@+id/intro_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".4">

                    <ImageView
                        android:id="@+id/intrologo2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="visible"
                        app:srcCompat="@drawable/intro_txt" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/intro_bot_draw"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".67">

                    <ImageView
                        android:id="@+id/intrologo3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="-30dp"
                        android:adjustViewBounds="true"
                        android:cropToPadding="true"
                        android:visibility="visible"
                        app:srcCompat="@drawable/intro_bot_draw" />
                </FrameLayout>

            </LinearLayout>

        </FrameLayout>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>
